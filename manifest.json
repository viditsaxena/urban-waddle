{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unwander App",
  "version": "1",
  "manifest_version": 2,
  "description": "Select any text(location or point of interest) on any website and add it to the your travel plan on Unwander",
  "icons": {
    "16": "Unwander_Logo_16.png",
    "48": "Unwander_Logo_48.png",
    "128": "Unwander_Logo_128.png"
  },
  "browser_action": {
    "default_title": "Unwander App"
  },


  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com; object-src 'self'",
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*",
      "http://*.google.com/*",
      "http://*.facebook.com/*",
      "https://*.google.com/*",
      "https://*.facebook.com/*"
    ],
    "exclude_matches": [
      "*://*.unwander.com/*"
    ],
    "css": [
      "css/global.css",
      "css/buttons.css"
    ],

    "js": [
      "js/jquery.js",
      "js/bootstrap.min.js",
      "js/libs/angular.min.js",
      "js/libs/angular-cookies.js",
      "js/gservice.js",
      "js/app.js",
      "js/contentscript.js"
    ],
    "all_frames": false
  }],

  "web_accessible_resources": [
    "content.html"
  ],

  "default_locale": "en",

  "background": {
    "scripts": [
	  "js/jquery.js",
      "js/events.js"
    ]
  },
  "permissions": [

    "storage",
    "tabs",
    "contextMenus",
    "cookies",
    "*://*.unwander.com/",
    "webRequest",
    "*://*.yelp.com/"    ]}
